rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read and write bookings
    // This is "Test Mode" style to ensure your app works immediately
    match /bookings/{bookingId} {
      allow read, write: if true;
    }
    
    // Default: allow nothing else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
